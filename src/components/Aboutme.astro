---
import me from '../assets/me.png';
---

<section id="hero">
	<div class="image-container">
	<a href="https://pokeapi.co/">
		<img class="shining-image" src={me.src} width="640" alt="Pokedex API Homepage" />
	</a>
</div>
</section>

<style>
	/* Container for the image */
	.image-container {
		width: 100%;
	}

	/* The actual image */
	.shining-image {
		position: relative;
		display: block; 
		margin: auto;
		z-index: 1;
	}

	/* Shine animation */
	@keyframes shine {
	0% {
		transform: translateX(-100%) skewX(-15deg);
	}
	100% {
		transform: translateX(100%) skewX(-15deg);
	}
	}

	/* Shine effect overlay */
	.image-container::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 2;
	}
</style>
